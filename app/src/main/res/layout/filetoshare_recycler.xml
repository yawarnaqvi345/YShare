<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_height="wrap_content">
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            >
            <RelativeLayout
                android:id="@+id/upper_rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/file_icon"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/finalshare_file_name1"
                android:layout_toRightOf="@+id/file_icon"
                android:layout_alignParentTop="true"
                android:textSize="30sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/finalshare_file_name"
                android:layout_toRightOf="@+id/file_icon"
                android:layout_below="@+id/finalshare_file_name1"
                />
            </RelativeLayout>
            <ProgressBar
                android:id="@+id/finalshare_recycler_progressbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/upper_rel"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
            <TextView
                android:id="@+id/percentage_text"
                android:layout_below="@+id/finalshare_recycler_progressbar"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="0"/>
        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>