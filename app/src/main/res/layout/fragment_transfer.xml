<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".Fragments.Transfer">
        <!-- TODO: Update blank fragment layout -->
        <RelativeLayout
            android:id="@+id/top_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_main">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_alignParentBottom="true"
                android:background="@color/colorPrimaryDark"
                ></RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="60dp"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_above="@+id/spacer"
                android:id="@+id/card_view"
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:padding="2dp"
                android:layout_margin="5dp"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius = "15dp"
                app:cardElevation = "5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">
                <Button
                    android:layout_width="200dp"
                    android:paddingLeft="20dp"
                    android:drawableTint="@color/colorGrey"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:textColor="@color/colorGrey"
                    android:background="@drawable/round_button"
                    android:text="Send"
                    android:drawableStart="@drawable/send"
                    android:id="@+id/button_send"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:drawableLeft="@drawable/send" />
                    <Button
                        android:paddingLeft="20dp"
                        android:drawableTint="@color/colorGrey"
                        android:paddingRight="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:drawableStart="@drawable/receive"
                        android:id="@+id/button_receive"
                        android:layout_below="@+id/button_send"
                        android:layout_width="200dp"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/colorGrey"
                        android:background="@drawable/round_button"
                        android:layout_height="wrap_content"
                        android:text="Receive"
                        android:drawableLeft="@drawable/receive"
                        android:foreground="?android:attr/selectableItemBackground"/>
                </RelativeLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <Space
                android:id="@+id/spacer"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="6dp" />
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="-100dp"
                android:layout_alignTop="@+id/card_view"
                android:src="@drawable/logo_y_share"
                android:layout_centerHorizontal="true"
                android:elevation="11dp"/>
        </RelativeLayout>
    </RelativeLayout>
