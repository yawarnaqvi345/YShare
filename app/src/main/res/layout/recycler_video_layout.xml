<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/video_linear_layout"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">
        <android.support.v7.widget.CardView
            android:id="@+id/video_card"
            app:cardCornerRadius="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="3dp"
            android:layout_margin="3dp">
            <ImageView
                android:id="@+id/video_thumb"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:descendantFocusability="blocksDescendants" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_play_circle_outline_black_24dp"
                android:layout_gravity="center"/>
        </android.support.v7.widget.CardView>
        <TextView
            android:id="@+id/video_info"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:layout_toLeftOf="@id/video_checkbox"
            android:layout_toRightOf="@+id/video_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Title set"/>
        <CheckBox
            android:id="@+id/video_checkbox"
            android:layout_width="wrap_content"
            android:layout_margin="15dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingBottom="30dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@drawable/border_bottom"></LinearLayout>
</LinearLayout>